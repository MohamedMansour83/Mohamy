@if (!Model.IsAuthenticated)
{
    <div class="modal" tabindex="-1" role="dialog" id="myModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Localizer["SendQuestion"]</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="padding:30px">
                    <form>
                        <div class="form-group row">
                            <input type="text" class="form-control" placeholder="@Localizer["Name"]" data-bind="value: questionModel.anonymousName">
                        </div>
                        <div class="form-group row">
                            <input type="email" class="form-control" placeholder="@Localizer["Email"]" data-bind="value: questionModel.anonymousEmail">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bind="click: sendQuestion">
                        <i class="fa fa-refresh fa-spin mr-1 d-none"></i>
                        @Localizer["Send"]
                    </button>
                    <button type="button" data-class="btn btn-secondary" data-dismiss="modal">@Localizer["Close"]</button>
                </div>
            </div>
        </div>
    </div>
}
@Html.Partial("~/Views/Shared/UserNotification.cshtml")

@Html.HiddenFor(s => s.Token)

<script>
    //alert($("#Token").val());
    localStorage.setItem("token", $("#Token").val())
    jQuery(document).ready(function ($) {
        $("#content-slider").lightSlider({
            loop: true,
            keyPress: true
        });

        $('#txt-question').keyup(updateCount);
        $('#txt-question').keydown(updateCount);

        function updateCount() {
            if ($(this).val().length == 201) {
                return;
            }
            var cs = [200 - $(this).val().length];
            $('#characters').text(cs);
        }
    });
</script>
