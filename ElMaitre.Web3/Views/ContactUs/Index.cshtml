@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["title"];
}
<script>
    $("header").removeClass("navbar-dark");
    $("#menu_navbar").addClass("shadow");
    $("#top_bar").addClass("shadow-sm");
</script>
<style>

    .cd-auto-hide-header {
        background-color: #ffffff
    }
</style>
<section id="header_image_inner">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="main-ttl inner_pages_ttl text-center my-4 py-3">
                    <h2>@Localizer["Contactus"]</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="inner_pages">
    <section class="contact_us">
        <div class="container">
            <div class="row">
                <div class="col-md-6 my-4 ">
                    <div class="card shadow">
                        <div class="p-4">
                            <div class="Primary_ttl">
                                <h4 class="Primary_ttl_h">@Localizer["Geeting"]</h4>
                            </div>
                            <ul class="mt-3" style="    list-style-type: none;">
                                <li><i class="fas fa-map-marker ml-1"></i>@Localizer["address"]</li>
                                <li><i class="far fa-envelope ml-1"></i>@Localizer["email_desc"]</li>
                                <li><i class="fas fa-mobile-alt ml-1"></i>@Localizer["phone"]</li>
                            </ul>
                            <div id="map" style="height:200px; width:100%;"></div>
