            <li class="list-group-item"><i class="mr-2 fas fa-map-marker-alt"></i>Cras justo odio</li>
            <li class="list-group-item"><i class="mr-2 fas fa-mobile-alt"></i>Dapibus ac facilisis in</li>
            <li class="list-group-item"><i class="mr-2 far fa-envelope"></i>Morbi leo risus</li>
        </ul>*@
                        </div>
                    </div>
                </div>
                <div class="col-md-6 my-4 ">
                    <div class="card shadow">
                        <div class="p-4">
                            <div class="Primary_ttl">
                                <h4 class="Primary_ttl_h">@Localizer["Mailus"]</h4>
                            </div>
                            <form class="">
                                <div class="form-group">
                                    <label for="exampleFormControlInput1">@Localizer["Email"]</label>
                                    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
                                </div>
                                <div class="form-group">
                                    <label for="exampleFormControlSelect1">@Localizer["Subject"]</label>
                                    <input type="text" class="form-control" id="subject" >
                                </div>
                                <div class="form-group">
                                    <label for="exampleFormControlTextarea1">@Localizer["Message"]</label>
                                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="@Localizer["YourMessage"]"></textarea>
                                </div>
                                <div class="text-center my-2">
                                    <button href="#" class="button  button-reveal w-100">
                                        <i class="fas fa-check"></i>
                                        <span>@Localizer["Send"]</span>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
